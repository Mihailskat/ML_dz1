import matplotlib.pyplot as plt

lr = 0.01
w = 0
b = 0
x = [1, 3, 7]
y = [2, 6, 14]

for i in range(len(x)):
  y_pred = w * x[i] + b
  w += 2 * lr * x[i] * (y[i] - y_pred)
  b += 2 * lr * (y[i] - y_pred)

print(y_pred, w, b)

plt.scatter(x, y, color='black')
plt.plot(x, y, color='red', label='Реальные значения')
plt.plot([x[0], x[-1]], [w * x[0] + b, w * x[-1] + b], label='Предсказанные значения', color='blue')
plt.xlabel('X')
plt.ylabel('Y')
plt.grid()
plt.legend()
plt.show()
